{
    "parserOptions": {
        "ecmaVersion": 2017
    },
    "extends": [
        "eslint:recommended"
    ],
    "env": {
        "es6": true,
        "node": true,
        "jest": true
    },
    "rules": {
        "max-classes-per-file": [
            2,
            1
        ],
        "indent": [
            "error",
            2
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "max-len": [
            "error",
            120,
            4
        ],
        "no-console": 1,
        "no-multiple-empty-lines": [
            "error",
            {
                "max": 1,
                "maxEOF": 1
            }
        ],
        "no-empty": 2,
        "object-literal-sort-keys": 0,
        "ordered-imports": 0,
        "prefer-for-of": 0,
        "handle-callback-err": 2,
        "no-extra-semi": 2,
        "trailing-comma": 0,
        "camelcase": [
            "warn",
            {
                "properties": "never"
            }
        ],
        "arrow-parens": 0
    }
}
